<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="demoWebShop Test Automation" verbose="5" thread-count="4"
	parallel="tests">
	<listeners>
		<listener
			class-name="com.aventstack.chaintest.plugins.ChainTestListener"></listener>
			<listener class-name="tricentis.demowbshop.listeners.TestAllureListener"></listener>
			<!--<listener class-name="tricentis.demowbshop.listeners.TestAnnotationTransformer"></listener>-->
			</listeners>
	<test name="Login Page Tests">
		<parameter name="browser" value="chrome" />
		<classes>
			<class name="tricentis.demowebshopAutomation.tests.HomePageTest" />
		</classes>
	</test>
	<test name="Account Page Tests">
		<parameter name="browser" value="firefox" />
		<classes>
			<class name="tricentis.demowebshopAutomation.tests.AccountPageTest" />
		</classes>
	</test>
		<test name="Product Info Page Tests">
	<parameter name="browser" value="chrome" />
		<classes>
			<class
				name="tricentis.demowebshopAutomation.tests.ProductInfoPageTest" />
		</classes>
	</test>
	<test name="Product Search Results Page Tests">
	<parameter name="browser" value="chrome" />
		<classes>
			<class
				name="tricentis.demowebshopAutomation.tests.ProductSearchResultsPageTest" />
		</classes>
	</test>
</suite>